<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Insight" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -  light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -  light theme here.-->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>

        <item name="android:textSize">15sp</item>



        <!-- Set custom splash screen icon (replace with your image) -->
        <!--  <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>-->
        <item name="android:windowSplashScreenBrandingImage">@drawable/vitavault_splash_250</item>
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimationDuration">2000</item>

    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/accent</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemShapeAppearanceOverlay">@style/SelectedItemShape</item>
        <item name="itemRippleColor">@null</item> <!-- Disables ripple effect if needed -->

    </style>
    <style name="SelectedItemShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item> <!-- Rounded corners -->
        <item name="cornerSize">50%</item> <!-- Adjust corner radius -->
    </style>

    <style name="Theme.Insight" parent="Base.Theme.Insight" />


</resources>