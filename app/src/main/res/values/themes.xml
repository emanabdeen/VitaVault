<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Insight" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color -  light theme here. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -  light theme here.-->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>

        <item name="android:textSize">18sp</item>

        <!-- This changes the color of icons, including the drawer icon -->
        <item name="colorControlNormal">#FFFFFF</item>


        <!-- Set custom splash screen icon (replace with your image) -->
        <!--  <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>-->
        <item name="android:windowSplashScreenBrandingImage">@drawable/vitavault_splash_250</item>
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimationDuration">2000</item>

        <!-- graphs -->
        <item name="graphLine1">@color/graphLine1</item>
        <item name="graphLine2">@color/graphLine2</item>
        <item name="chartTextColor">@android:color/black</item> <!-- Black text in light mode -->
        <item name="chartAxisColor">@android:color/black</item> <!-- Black lines in light mode -->
        <item name="gridColor">@color/gridColor</item> <!-- Semi-transparent black for light theme -->

    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/accent</item>
    </style>

    <style name="Theme.Insight" parent="Base.Theme.Insight" />


</resources>