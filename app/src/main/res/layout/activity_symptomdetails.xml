<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vitavault_page_background3"
    android:orientation="vertical"
    tools:context=".view.SymptomDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/glow_white"
            android:padding="10dp" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Wrap your LinearLayout with a ScrollView -->
    <android.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <!-- Vertical LinearLayout with margin between CardViews -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="40dp"
            android:paddingTop="20dp"
            android:paddingEnd="40dp">


            <!-- Category Dropdown -->
            <!--    <Spinner-->
            <!--        android:id="@+id/spinnerCategory"-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:background="@drawable/spinner_background"-->
            <!--        android:padding="8dp" />-->

            <!-- Date Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textStyle="bold" />

            <!-- Date Picker -->
            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:inputType="date"
                android:padding="8dp" />

            <TextView
                android:id="@+id/errorDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="error message"
                android:textColor="@color/error"
                android:textSize="15sp"
                android:textStyle="italic"
                android:visibility="gone" />

            <!-- Start Hour Label -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">

                <!-- Left-aligned layout -->
                <LinearLayout
                    android:id="@+id/leftLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Time"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTimeStart"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:inputType="time"
                        android:padding="8dp" />

                    <TextView
                        android:id="@+id/errorTimeStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="error message"
                        android:textColor="@color/error"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Right-aligned layout -->
                <LinearLayout
                    android:id="@+id/rightLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Time"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTimeEnd"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:inputType="time"
                        android:padding="8dp" />

                    <TextView
                        android:id="@+id/errorTimeEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="error message"
                        android:textColor="@color/error"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>





            <TextView
                android:id="@+id/lblLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Level"
                android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/symptomLevelsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- RadioGroup to contain the radio buttons -->
                    <RadioGroup
                        android:id="@+id/radioGroupSymptomLevel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- RadioButton for "Not Present" -->
                        <RadioButton
                            android:id="@+id/radioNotPresent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not Present"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:textSize="16sp" />

                        <!-- RadioButton for "Mild" -->
                        <RadioButton
                            android:id="@+id/radioMild"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mild"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:textSize="16sp" />
                        <!-- RadioButton for "Moderate" -->
                        <RadioButton
                            android:id="@+id/radioModerate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Moderate"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:textSize="16sp" />

                        <!-- RadioButton for "Severe" -->
                        <RadioButton
                            android:id="@+id/radioSevere"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Severe"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:textSize="16sp" />
                    </RadioGroup>
                </LinearLayout>

            <TextView
                android:id="@+id/errorMeasure1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="error message"
                android:textColor="@color/error"
                android:textSize="15sp"
                android:textStyle="italic"
                android:visibility="gone" />

            <!-- Measure2 Label -->
            <TextView
                android:id="@+id/lblNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Notes"
                android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:justificationMode="inter_word"
                    android:scrollbars="vertical"
                    android:gravity="start|top"
                    android:padding="5dp"
                    android:inputType="textMultiLine"
                    android:textSize="16sp"
                    android:hint="add your notes"
                    android:textColorHint="@color/liteGray"
                    android:background="@drawable/edit_text_background"/>

            <TextView
                android:id="@+id/errorGeneral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="error message"
                android:textColor="@color/error"
                android:textSize="15sp"
                android:textStyle="italic"
                android:visibility="gone" />
            <!-- Submit Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_secondary"
                android:text="@string/save"
                android:textStyle="bold" />

        </LinearLayout>
    </android.widget.ScrollView>
</LinearLayout>